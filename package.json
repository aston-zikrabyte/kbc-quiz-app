{
  "name": "man-next-app",
  "description": "Scaffold a modern Next.js 15 boilerplate with Tailwind, TypeScript, ShadCN, Prettier, ESLint, Husky, and multi-theme support.",
  "keywords": [
    "create-next-app",
    "nextjs-template",
    "nextjs",
    "tailwindcss",
    "typescript",
    "shadcn",
    "eslint",
    "prettier",
    "husky",
    "boilerplate",
    "theme-provider",
    "dark-mode",
    "pnpm create"
  ],
  "version": "0.1.0",
  "private": false,
  "author": "Muhsin Abdul Nissar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Muhsin-42/man-next-app.git"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx app",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx app --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "fix-all": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit --incremental",
    "upgrade": "npx npm-check-updates -u && npm install",
    "prepare": "husky"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.508.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@next/eslint-plugin-next": "^15.3.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "eslint": "^9.24.0",
    "eslint-config-next": "^15.3.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
